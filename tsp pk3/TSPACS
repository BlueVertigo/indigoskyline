#include "zcommon.acs"
#library "tspacs"

script 858 (void)
{
	if(GetPlayerInfo(PlayerNumber(), PLAYERINFO_GENDER) == 2)
		GiveInventory("RoboPickupZekeShotgun",1);
	else
		GiveInventory("FlavorPickupZekeShotgun",1);
}

